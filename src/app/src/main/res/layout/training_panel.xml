<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/viewCurrentTrackPanel"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/radius_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/distanceVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/distance_empty_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorDark"
        app:layout_constraintEnd_toEndOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintStart_toEndOf="@+id/speedVal"
        app:layout_constraintTop_toTopOf="@+id/viewCurrentTrackPanel" />

    <TextView
        android:id="@+id/timeVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/time_empty_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorDark"
        app:layout_constraintEnd_toStartOf="@+id/speedVal"
        app:layout_constraintStart_toStartOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintTop_toTopOf="@+id/viewCurrentTrackPanel" />

    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/time_label"
        android:textColor="@color/colorLDark"
        app:layout_constraintBottom_toBottomOf="@+id/timeVal"
        app:layout_constraintStart_toStartOf="@+id/timeVal"
        app:layout_constraintTop_toTopOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/distanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/distance_km_label"
        android:textColor="@color/colorLDark"
        app:layout_constraintBottom_toBottomOf="@+id/timeVal"
        app:layout_constraintStart_toStartOf="@+id/distanceVal"
        app:layout_constraintTop_toTopOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintVertical_bias="0.457" />

    <TextView
        android:id="@+id/speedVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/speed_empty_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorDark"
        android:textSize="68sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintEnd_toStartOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewCurrentTrackPanel" />

    <TextView
        android:id="@+id/speedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/speed_label"
        android:textColor="@color/colorLDark"
        app:layout_constraintBottom_toBottomOf="@+id/speedVal"
        app:layout_constraintEnd_toEndOf="@+id/speedVal" />

    <ImageButton
        android:id="@+id/pauseTrackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_pause"
        android:contentDescription="@string/pause_button"
        android:onClick="clickPauseTrackButton"
        app:layout_constraintBottom_toBottomOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintEnd_toEndOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintStart_toEndOf="@+id/speedVal"
        app:layout_constraintTop_toBottomOf="@+id/distanceVal" />

    <ImageButton
        android:id="@+id/startTrackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_start"
        android:contentDescription="@string/start_button"
        android:onClick="clickStartTrackButton"
        app:layout_constraintBottom_toBottomOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintEnd_toEndOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintStart_toEndOf="@+id/speedVal"
        app:layout_constraintTop_toBottomOf="@+id/distanceVal" />

    <ImageButton
        android:id="@+id/stopTrackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_stop"
        android:contentDescription="@string/stop_button"
        android:onClick="clickStopTrackButton"
        app:layout_constraintBottom_toBottomOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintEnd_toStartOf="@+id/speedVal"
        app:layout_constraintStart_toStartOf="@+id/viewCurrentTrackPanel"
        app:layout_constraintTop_toBottomOf="@+id/timeVal" />

</androidx.constraintlayout.widget.ConstraintLayout>
